<% include partials/header.ejs %>

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <h1>New Widget</h1>
            <form action="/widgets" method="post">
                <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" class="form-control" name="widget[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <label for="">Description</label>
                    <textarea class="form-control" name="widget[description]" placeholder="widget description"></textarea>
                </div>
                <div class="form-group">
                    <label for="">In Stock?</label>
                    <select class="form-control" name="widget[inStock]">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Giga Watts</label>
                    <input type="text" class="form-control" name="widget[gigaWatts]" placeholder="How many giga watts?">
                </div>
                <div class="form-group">
                    <label for="">Speed</label>
                    <input type="text" class="form-control" name="widget[speed]" placeholder="How fast is it?">
                </div>
                <button class="btn btn-success" type="submit">Save</button>
            </form>
        </div>
    </div>
</div>


