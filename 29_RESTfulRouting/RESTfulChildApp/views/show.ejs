<% include partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="thumbnail">
                <img src="<%= child.image %>" alt="">
                <div class="caption">
                    <h3><%= child.name %></h3>
                    <p><%= child.funFact %></p>
                    <div class="row">
                        <div class="col-xs-6">
                            <a id="editBtn" href="/children/<%= child._id %>/edit" class="btn btn-warning showBtns">Edit</a>
                        </div>
                        <div class="col-xs-6">
                            <form id="delete" action="/children/<%= child._id %>?_method=DELETE" method="post">
                                <button class="btn btn-danger showBtns" type="submit">Delete</button>
                            </form>
                        </div>
                    </div>

                    <small>Date Added: <%= child.created %></small>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/footer.ejs %>